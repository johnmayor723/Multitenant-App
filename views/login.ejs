<div  style="margin-bottom:150px" class="container mt-5">
    <form action="/login" method="POST" class="card p-4 shadow-sm">
        <h3 class="mb-4">Login To Your Account</h3>
       
        <div class="mb-3">
            <label>Email</label>
            <input type="email" name="email" class="form-control" required>
        </div>
        <div class="mb-3">
            <label>Password</label>
            <input type="password" name="password" class="form-control" required>
        </div>
        <!-- In your EJS form -->
<input type="text" name="companyName" style="display:none">
        <button type="submit" class="btn btn-primary w-100">Login</button>
        
        <!-- Links for Sign Up and Reset Password -->
        <div class="text-center mt-3">
            <a href="/register" class="text-decoration-none">Don't have an account? Sign Up</a>
        </div>
        <div class="text-center mt-2">
            <a href="/reset-password" class="text-decoration-none">Forgot your password? Reset here</a>
        </div>
    </form>
</div>