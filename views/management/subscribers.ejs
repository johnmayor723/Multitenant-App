<div class="container mt-4">
    <div class="jumbotron">
        <h1 class="display-4">Subscribers List</h1>
        <p class="lead">Manage and view all your subscribers.</p>
    </div>

    <div class="card p-4">
        <h3>All Subscribers</h3>
        <% if (subscribers.length > 0) { %>
            <ul class="list-group">
                <% subscribers.forEach(subscriber => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= subscriber.email %>
                        <form action="/management/subscriber/delete/<%= subscriber._id %>?_method=DELETE" method="POST" class="d-inline">
                            <input type="hidden" name="id" value="<%= subscriber._id %>">
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No subscribers found.</p>
        <% } %>
    </div>
</div>
