    <div class="form-group">
        <label>Author name:</label>
        <input type="text" class="for-control" name="author" required>
    </div>

  
    
    <button type="submit" class="btn btn-success">Create Blog</button>
</form>
    </div>

    <!-- Display Blogs -->
    <div class="card p-4">
        <h3>All Blogs</h3>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="<%= blog.image %>" class="img-fluid rounded-start" alt="Blog Image">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= blog.title %></h5>
                                <p class="card-text"><%= blog.intro%></p>
                                <a href="/management/blogs/edit/<%= blog._id %>" class="btn btn-primary">Edit</a>
<form action="/management/blogs/delete/<%= blog._id %>?_method=DELETE" method="POST" class="d-inline">
    <input type="hidden" name="id" value="<%= blog._id %>">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>    
</div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>No blogs found.</p>
        <% } %>
    </div>
</div>