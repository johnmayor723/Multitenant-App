    <textarea class="form-control" name="para4" rows="4" ></textarea>
</div>

<div class="form-group">
    <label>Paragraph 5:</label>
    <textarea class="form-control" name="para5" rows="4" ></textarea>
</div>

<div class="form-group">
    <label>Paragraph 6:</label>
    <textarea class="form-control" name="para6" rows="4" ></textarea>
</div>

<div class="form-group">
