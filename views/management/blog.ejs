    <textarea class="form-control" name="para7" rows="4" ></textarea>
</div>

<div class="form-group">
    <label>Paragraph 8:</label>
    <textarea class="form-control" name="para8" rows="4" required></textarea>
</div>

<div class="form-group">
    <label>Paragraph 9:</label>
    <textarea class="form-control" name="para9" rows="4" ></textarea>
</div>

<div class="form-group">
    <label>Paragraph 10:</label>
    <textarea class="form-control" name="para10" rows="4" ></textarea>
</div>

<div class="form-group">
    <label>Paragraph 11:</label>
    <textarea class="form-control" name="para11" rows="4" ></textarea>
</div>

<div class="form-group">
    <label>Paragraph 12:</label>
    <textarea class="form-control" name="para12" rows="4" ></textarea>
</div>

<div class="form-group">
    <label>Paragraph 13:</label>
    <textarea class="form-control" name="para13" rows="4" ></textarea>
</div>

