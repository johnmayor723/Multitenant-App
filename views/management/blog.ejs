    <label>Paragraph 16:</label>
    <textarea class="form-control" name="para16" rows="4" ></textarea>
</div>

<div class="form-group">
    <label>Paragraph 17:</label>
    <textarea class="form-control" name="para17" rows="4"></textarea>
</div>

<div class="form-group">
    <label>Paragraph 18:</label>
    <textarea class="form-control" name="para18" rows="4" ></textarea>
