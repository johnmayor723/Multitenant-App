  <title>Dashboard</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; font-family: Arial, sans-serif; }

    body {
      background: #f8f9fb;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    /* Top Navbar */
    .navbar {
      background: #fff;
      border-bottom: 1px solid #ddd;
      padding: 12px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: sticky;
      top: 0;
      z-index: 1100;
    }

    .hamburger {
      font-size: 24px;
      cursor: pointer;
      display: none;
    }

    /* Layout */
    .content {
      display: flex;
      flex: 1;
      padding: 40px 100px;
      gap: 20px;
    }

    .left-col {
      flex: 7;
    }

    .right-col {
      flex: 3;
    }

    /* Card / Jumbotron */
    .card {
      background: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 16px;
      margin-bottom: 20px;
    }

    .jumbotron {
      background: #e9f0ff;
      border: 1px solid #c5d8ff;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 20px;
    }

    .stats {
      display: flex;
      gap: 20px;
    }

    .stat {
      flex: 1;
      text-align: center;
      padding: 10px;
      border-radius: 8px;
      background: #f9f9f9;
    }

    .orders {
      margin-top: 20px;
    }

    .order-item {
      padding: 10px;
      border-bottom: 1px solid #eee;
    }

    /* Sidebar */
    .sidebar {
      width: 250px;
      background: #fff;
      border-right: 1px solid #ddd;
      padding: 20px;
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      transform: translateX(0); /* visible by default */
      z-index: 1200;
      transition: transform 0.3s ease;
    }

    .sidebar h2 {
      font-size: 18px;
      margin-bottom: 20px;
    }

    .menu {
      list-style: none;
    }

    .menu li {
      margin: 12px 0;
    }

    .menu a {
      text-decoration: none;
      color: #333;
      font-size: 15px;
      display: block;
      padding: 8px 12px;
      border-radius: 6px;
      cursor: pointer;
    }

    .menu a:hover {
      background: #f0f0f0;
    }

    /* Overlay */
    .overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.4);
      z-index: 1100;
    }

    .overlay.active {
      display: block;
    }
    .products-container {
  padding: 20px;
}

.products-container h2 {
  margin-bottom: 20px;
  color: #262626;
}

.jumbotrons {
  display: grid;
  gap: 20px;
}

.jumbotron {
  display: block;
  background: #f9f9f9;
  padding: 30px;
  border-radius: 12px;
  text-decoration: none;
  color: #333;
  font-weight: bold;
  box-shadow: 0 4px 10px rgba(0,0,0,0.05);
  transition: all 0.2s ease-in-out;
}

.jumbotron:hover {
  background: #454444;
  color: #fff;
  transform: translateY(-4px);
}


    /* Responsive */
    @media(max-width: 768px) {
      .sidebar {
        transform: translateX(-100%); /* hidden on mobile until toggled */
      }

      .sidebar.active {
        transform: translateX(0);
      }

      .content {
        padding: 20px;
        flex-direction: column;
        margin-left: 0;
      }

      .right-col {
        display: none;
      }

      .hamburger {
        display: block;
      }
    }

    /* Push content right when sidebar is visible on desktop */
    @media(min-width: 769px) {
      .content {
        margin-left: 250px;
      }
    }
  </style>
</head>
