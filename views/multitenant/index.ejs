<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Navbar with Dropdowns and Modals</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="padding-top:70px;">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light shadow fixed-top">
  <div class="container-fluid">
    <!-- Logo -->
    <a class="navbar-brand fw-bold text-black" href="#">MyLogo</a>

    <!-- Hamburger -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Menu Items -->
    <div class="collapse navbar-collapse" id="navbarMenu">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <!-- Regular Links -->
        <li class="nav-item">
          <a class="nav-link fw-bold text-black" href="#">Home</a>
        </li>
        
        <!-- Dropdown 1 -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle fw-bold text-black" href="#" id="dropdown1" role="button" data-bs-toggle="dropdown">Products</a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalProducts1">Product A</a></li>
            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalProducts2">Product B</a></li>
          </ul>
        </li>

        <!-- Dropdown 2 -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle fw-bold text-black" href="#" id="dropdown2" role="button" data-bs-toggle="dropdown">Services</a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalServices1">Service A</a></li>
            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalServices2">Service B</a></li>
          </ul>
        </li>

        <!-- Dropdown 3 -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle fw-bold text-black" href="#" id="dropdown3" role="button" data-bs-toggle="dropdown">More</a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalMore1">About Us</a></li>
            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalMore2">Contact</a></li>
          </ul>
        </li>

        <!-- Regular Link -->
        <li class="nav-item">
          <a class="nav-link fw-bold text-black" href="#">Blog</a>
        </li>
      </ul>

      <!-- Right Section -->
      <div class="d-flex">
        <a href="#" class="nav-link fw-bold text-black">Login</a>
        <a href="#" class="nav-link fw-bold text-black">Sign Up</a>
      </div>
    </div>
  </div>
</nav>

<!-- ===== Modals ===== -->

<!-- Products Modal -->
<div class="modal fade" id="modalProducts1" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Product A</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Details about Product A...</p>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="modalProducts2" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Product B</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Details about Product B...</p>
      </div>
    </div>
  </div>
</div>

<!-- Services Modal -->
<div class="modal fade" id="modalServices1" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Service A</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Details about Service A...</p>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="modalServices2" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Service B</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Details about Service B...</p>
      </div>
    </div>
  </div>
</div>

<!-- More Modal -->
<div class="modal fade" id="modalMore1" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">About Us</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Company information...</p>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="modalMore2" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Contact</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Contact details...</p>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
