<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Payment Methods</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-color: #f8f9fa;
    }

    .container {
      display: flex;
      background: white;
      width: 90%;
      max-width: 1100px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    /* Left Section */
    .left {
      flex: 1;
      padding: 2rem;
    }

    .step {
      font-size: 0.85rem;
      color: #555;
      margin-bottom: 1rem;
    }

    h2 {
      font-size: 1.4rem;
      font-weight: bold;
      margin-bottom: 1.5rem;
    }

    .method {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 0.8rem;
      font-size: 1rem;
      background: #f8f9fa;
      padding: 0.8rem 1rem;
      border-radius: 8px;
    }

    /* Toggle switch */
    .switch {
      position: relative;
      display: inline-block;
      width: 42px;
      height: 22px;
    }

    .switch input {
      opacity: 0;
      width: 0;
      height: 0;
    }

    .slider {
      position: absolute;
      cursor: pointer;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #ccc;
      transition: 0.4s;
      border-radius: 34px;
    }

    .slider:before {
      position: absolute;
      content: "";
      height: 16px;
      width: 16px;
      left: 3px;
      bottom: 3px;
      background-color: white;
      transition: 0.4s;
      border-radius: 50%;
    }

    input:checked + .slider {
      background-color: #1a202c;
    }

    input:checked + .slider:before {
      transform: translateX(20px);
    }

    /* Hidden Forms */
    .form {
      display: none;
      margin-bottom: 1rem;
      padding-left: 1rem;
    }

    .form input {
      display: block;
      width: 100%;
      margin-top: 0.4rem;
      margin-bottom: 0.8rem;
      padding: 0.6rem;
      border-radius: 6px;
      border: 1px solid #ddd;
    }

    .buttons {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 1.5rem;
    }

    .btn {
      padding: 0.8rem 1.2rem;
      border: none;
      border-radius: 6px;
      font-size: 0.95rem;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .btn-primary {
      background-color: #1a202c;
      color: white;
    }

    .btn-primary:hover {
      background-color: #2d3748;
    }

    .btn-secondary {
      background-color: transparent;
      color: #555;
      border: none;
      cursor: pointer;
      font-size: 0.95rem;
    }

    /* Right Section */
    .right {
      flex: 1;
      background: #f4f5f7;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 2rem;
    }

    .preview-card {
      background: white;
      border: 1px solid #ddd;
      border-radius: 12px;
      padding: 1rem;
      width: 250px;
      text-align: left;
      min-height: 100px;
      display: flex;
      flex-direction: column;
      gap: 0.8rem;
    }

    .preview-item {
      background: #f8f9fa;
      padding: 0.6rem;
      border-radius: 6px;
      border: 1px solid #ddd;
      font-size: 0.9rem;
    }

    .preview-placeholder {
      text-align: center;
      color: #666;
      font-size: 0.9rem;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Left Section -->
    <div class="left">
      <div class="step">3 / 4</div>
      <h2>Add payment methods</h2>

      <!-- PayPal -->
      <div class="method">
        <span>PayPal</span>
        <label class="switch">
          <input type="checkbox" class="toggle" data-label="PayPal" data-target="paypal-form">
          <span class="slider"></span>
        </label>
      </div>
      <div class="form" id="paypal-form">
        <input type="text" placeholder="PayPal.me username">
      </div>

      <!-- Airtel -->
      <div class="method">
        <span>Airtel</span>
        <label class="switch">
          <input type="checkbox" class="toggle" data-label="Airtel" data-target="airtel-form">
          <span class="slider"></span>
        </label>
      </div>
      <div class="form" id="airtel-form">
        <input type="text" placeholder="Airtel Money Number">
      </div>

      <!-- Bank Transfer -->
      <div class="method">
        <span>Bank transfer</span>
        <label class="switch">
          <input type="checkbox" class="toggle" data-label="Bank transfer" data-target="bank-form">
          <span class="slider"></span>
        </label>
      </div>
      <div class="form" id="bank-form">
        <input type="text" placeholder="Account Number">
        <input type="text" placeholder="Account Holder Name">
        <input type="text" placeholder="Bank Name">
        <input type="text" placeholder="Sort Code">
      </div>

      <!-- COD -->
      <div class="method">
        <span>Cash on Delivery</span>
        <label class="switch">
          <input type="checkbox" class="toggle" data-label="Cash on Delivery" data-target="cod-form">
          <span class="slider"></span>
        </label>
      </div>
      <div class="form" id="cod-form">
        <small>Cash will be collected when order is delivered.</small>
      </div>

      <div class="buttons">
        <button class="btn-secondary">Skip</button>
        <button class="btn btn-primary">Continue</button>
      </div>
    </div>

    <!-- Right Section -->
    <div class="right">
      <div class="preview-card" id="preview">
        <div class="preview-placeholder">No payment method selected</div>
      </div>
    </div>
  </div>

  <script>
    const toggles = document.querySelectorAll('.toggle');
    const preview = document.getElementById('preview');

    toggles.forEach(toggle => {
      toggle.addEventListener('change', () => {
        const form = document.getElementById(toggle.dataset.target);
        if (toggle.checked) {
          form.style.display = 'block';
        } else {
          form.style.display = 'none';
        }
        updatePreview();
      });
    });

    function updatePreview() {
      preview.innerHTML = ''; // Clear preview
      const selected = Array.from(toggles)
        .filter(t => t.checked)
        .map(t => t.dataset.label);

      if (selected.length === 0) {
        preview.innerHTML = '<div class="preview-placeholder">No payment method selected</div>';
      } else {
        selected.forEach(label => {
          const div = document.createElement('div');
          div.classList.add('preview-item');
          div.textContent = label;
          preview.appendChild(div);
        });
      }
    }
  </script>
</body>
</html>