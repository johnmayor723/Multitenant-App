                                <div class="d-flex mb-4">
                                    <i class="fa fa-star text-secondary"></i>
                                    <i class="fa fa-star text-secondary"></i>
                                    <i class="fa fa-star text-secondary"></i>
                                    <i class="fa fa-star text-secondary"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                
                                <p class="mb-4"><%=product.description%></p>
                                
<form action="/cart/<%= product._id %>" method="post">
    <input type="hidden" name="name" value="<%= product.name %>">
    <input type="hidden" name="imageUrl" value="<%= product.imageUrl %>">
    <input type="hidden" name="price" value="<%= product.price %>">
    
</form>
                           
</div>
<!-- Measurement Section Start -->
<div class="container-fluid py-5">
  <h4 class="mb-4" style="color: #2D7B30;">
    Buying Options
  </h4>
  <div class="row row-cols-2 row-cols-md-4 g-4">
    <% measurements.forEach(function(measurement) { %>
      <div class="col">
        <div class="card shadow-sm h-100">
          <div class="d-flex align-items-center">
            <div class="p-2" style="flex: 1;">
              <img src="<%= measurement.imageUrl %>" class="img-fluid rounded-start" alt="<%= measurement.name %>">
            </div>
            <div class="p-2" style="flex: 2;">
              <h6 class="card-title mb-1"><%= measurement.name %></h6>
              <p class="card-text fw-bold mb-2" style="color: #2D7B30;">â‚¦<%= measurement.price %></p>
              <form action="/cart/<%= product._id %>/add-measurement" method="post">
                <input type="hidden" name="id" value="<%= measurement._id %>">
                <input type="hidden" name="name" value="<%= measurement.name %>">
                <input type="hidden" name="price" value="<%= measurement.price %>">
                <input type="hidden" name="imageUrl" value="<%= measurement.imageUrl %>">
                <button type="submit" class="btn btn-primary rounded-pill px-3 py-1">Add to Cart</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
