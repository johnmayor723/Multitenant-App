
<div class="container mt-5">
  <!-- Single Image Hero Section -->
  <div class="card mb-4">
    <img src="/images/hero-product.jpg" class="card-img-top" alt="Product Hero Image">
  </div>

  <!-- Product Details Section -->
  <div class="row">
    <div class="col-md-6">
      <img src="<%= product.image %>" class="img-fluid" alt="<%= product.title %>">
    </div>
    <div class="col-md-6">
      <h1><%= product.title %></h1>
      <p class="text-success h4">$<%= product.price %></p>
      <p><%= product.description %></p>
      <button class="btn btn-success" onclick="addToCart('<%= product.id %>')">Add to Cart</button>
      <p class="text-muted mt-3">
        <small>Ratings:
          <% for (let i = 0; i < product.rating; i++) { %>
            <i class="fas fa-star text-warning"></i>
          <% } %>
        </small>
      </p>
    </div>
  </div>

  <!-- Suggested Products Section -->
  <section class="mt-5">
    <h2>Suggested Products</h2>
    <div class="row">
      <% suggestedProducts.forEach(suggested => { %>
        <div class="col-md-3 col-6 mb-4">
          <div class="card h-100">
            <img src="<%= suggested.image %>" class="card-img-top" alt="<%= suggested.title %>">
            <div class="card-body text-center">
              <h5 class="card-title"><%= suggested.title %></h5>
              <p class="text-success">$<%= suggested.price %></p>
              <a href="/product/<%= suggested.id %>" class="btn btn-outline-success btn-sm">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
</div>

<script>
  function addToCart(productId) {
    alert("Product added to cart!");
  }
</script>
