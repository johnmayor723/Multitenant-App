<div  style="margin-bottom:150px" class="container mt-5"> 
    <form action="/register" method="POST" class="card p-4 shadow-sm">
        <h3 class="mb-4">Sign Up Today!!</h3>
        
        <div class="mb-3">
            <label>Name</label>
            <input type="text" name="name" class="form-control" required>
        </div>
        <div class="mb-3">
            <label>Email</label>
            <input type="email" name="email" class="form-control" required>
        </div>
        <!-- In your EJS form -->
<input type="text" name="companyName" style="display:none">
        <div class="mb-3">
            <label>Password</label>
            <input type="password" name="password" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
        
        <!-- Links for Login and Reset Password -->
        <div class="text-center mt-3">
            <a href="/login" class="text-decoration-none">Already have an account? Login</a>
        </div>
        <div class="text-center mt-2">
            <a href="/reset-password" class="text-decoration-none">Forgot your password? Reset here</a>
        </div>
    </form>
</div>