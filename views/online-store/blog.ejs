
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Offcanvas Menu Begin -->
    

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-blog set-bg" data-setbg="img/breadcrumb-bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Our Blog</h2>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Blog Section Begin -->
    <section class="blog spad">
        <div class="container">
            <div class="row">
             
             
<% blogs.forEach(blog => { %>
    <div class="col-lg-4 col-md-6 col-sm-6">
        <div class="blog__item">
            <div class="blog__item__pic set-bg" style="margin-top: 20px; margin-bottom: 20px;">
                <img src="<%= blog.image %>" alt="Blog Image">
            </div>
            <div class="blog__item__text">
                <span><img src="img/icon/calendar.png" alt=""> <%= blog.createdAt %></span>
                <h5><%= blog.title %></h5>
                <a href="/blogs/<%= blog._id %>">Read More</a>
            </div>
        </div>
    </div>
<% }) %>
               
            </div>
        </div>
    </section>
    <!-- Blog Section End -->

