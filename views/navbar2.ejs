<!-- Desktop Category Modal -->
<div id="desktopCategoryModal" class="position-fixed w-100 bg-white shadow-lg" style="top:100px; display:none; z-index:1050;">
  <div class="container py-4">
    <div class="row row-cols-1 row-cols-md-3 g-4" id="desktopModalContent">
      <!-- Filled dynamically -->
    </div>
  </div>
</div>


  <script>
  const categoryMap = {
    Bags: ["crossbody-bag", "shoulder-bag", "clutch", "backpack", "duffel-bag", "travel-set"],
    Jackets: ["blazer", "denim-jacket", "winter-jacket", "bomber-jacket"],
    Shirts: ["t-shirt", "long-sleeve-shirts", "short-sleeve-shirts"],
    Suits: ["trouser-suit", "skirt-suit"],
    Dresses: [],
    Skirts: [],
    Sets: ["travel-set", "beach-set", "short-and-top-set", "kimono-set"],
    Kimono: [],
    Sweatshirts: [],
    Hoodies: [],
    Glasses: [],
    "Beach hats": [],
    Gym: ["active-wears", "yoga-mats"],
    Sales: [],
    "Clearance sales": []
  };

  function capitalize(str) {
    return str.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
  }

  function renderDesktopModal() {
    const container = document.getElementById('desktopModalContent');
    container.innerHTML = '';

    Object.entries(categoryMap).forEach(([category, subcats]) => {
      const col = document.createElement('div');
      col.className = 'col';

      const title = document.createElement('h6');
      title.textContent = category;

      const list = document.createElement('ul');
      list.className = 'list-unstyled';

      if (subcats.length === 0) {
        const li = document.createElement('li');
        const a = document.createElement('a');
        a.href = `/products/${category}/`;
        a.textContent = category;
        a.className = 'fw-bold';
        li.appendChild(a);
        list.appendChild(li);
      } else {
        subcats.forEach(sub => {
          const li = document.createElement('li');
          const a = document.createElement('a');
          a.href = `/products/${category}/${sub}`;
          a.textContent = capitalize(sub);
          a.className = 'fw-bold';
          li.appendChild(a);
          list.appendChild(li);
        });
      }

      col.appendChild(title);
      col.appendChild(list);
      container.appendChild(col);
    });
  }

  document.addEventListener('DOMContentLoaded', () => {
    const shopLink = document.getElementById('desktopShopLink');
    const modal = document.getElementById('desktopCategoryModal');

    shopLink.addEventListener('click', (e) => {
      e.preventDefault();
      if (window.innerWidth >= 992) {
        renderDesktopModal();
        modal.style.display = modal.style.display === 'block' ? 'none' : 'block';
      }
    });

    document.addEventListener('click', (e) => {
      if (!modal.contains(e.target) && !shopLink.contains(e.target)) {
        modal.style.display = 'none';
      }
    });
  });
</script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileCats = document.querySelectorAll('.mobile-cat');
    const mobileCatList = document.getElementById('mobileSubList');
    const mobileCatsContainer = document.getElementById('mobile-categories');
    const mobileSubcatsContainer = document.getElementById('mobile-subcategories');
    const backToCats = document.getElementById('backToCats');

    mobileCats.forEach(el => {
      el.addEventListener('click', () => {
        const cat = el.getAttribute('data-category');
        const subs = categoryMap[cat] || [];

        mobileCatList.innerHTML = '';
        if (subs.length === 0) {
          const li = document.createElement('li');
          const a = document.createElement('a');
          a.href = `/products/${cat}/`;
          a.textContent = cat;
          a.className = 'fw-bold';
          li.appendChild(a);
          mobileCatList.appendChild(li);
        } else {
          subs.forEach(sub => {
            const li = document.createElement('li');
            const a = document.createElement('a');
            a.href = `/products/${cat}/${sub}`;
            a.textContent = capitalize(sub);
            a.className = 'fw-bold';
            li.appendChild(a);
            mobileCatList.appendChild(li);
          });
        }

        mobileCatsContainer.style.display = 'none';
        mobileSubcatsContainer.style.display = 'block';
      });
    });

    backToCats.addEventListener('click', () => {
      mobileSubcatsContainer.style.display = 'none';
      mobileCatsContainer.style.display = 'block';
    });
  });
</script>
